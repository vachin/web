# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /tagged/:tag                controllers.Application.getTaggedTexts(tag: String, version: Option[Int], limit: Option[Int])

GET     /search                     controllers.Application.searchTexts(q: String, tag: Option[String], version: Option[Int], limit: Option[Int])

GET     /trending                   controllers.Application.getTexts(version: Option[Int], limit: Option[Int])

GET     /internal/texts/new                  controllers.Application.newText()

POST    /internal/texts/new                  controllers.Application.postText()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /login                      controllers.Application.login()

GET     /:textId                    controllers.Application.getText(textId: String)

    